<h2>Create Event</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@event) do |f| %>
      <ul>
        <% @event.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>

      <%= f.label :title, "Event Name" %><br>
      <%= f.text_field :title %><br>

      <%= f.label :description, "Describe the event!" %><br>
      <%= f.text_area :description %><br>

      <%= f.label :location, "Where?" %><br>
      <%= f.text_area :location %><br>

      <%= f.label :date, "Date" %><br>
      <%= f.date_field :date %><br>

      <%= f.submit "Create", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
