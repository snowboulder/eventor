<h2>Create Event</h2>

<%= form_for(@event) do |f| %>
  <ul>
    <% @event.errors.full_messages.each do |error| %>
      <li><%= error %></li>
  <% end %>
  </ul>

  <%= f.label :title, "Event Name" %>
  <%= f.text_field, :title %>

  <%= f.label :description, "Describe the event!" %>
  <%= f.text_area, :description %>

  <%= f.submit %>

<% end %>
