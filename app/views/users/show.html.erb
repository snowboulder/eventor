<h2><%= @user.name %></h2>

<p>
  This is your profile stats<br>
  Email: <%= @user.email %>
  <br>
  All events created:
  <br>
  <% @events.each do |e| %>
    <%= e.created_events.title %>
    <br>
  <% end %>
</p>

<h4>Upcoming Events</h4>
<ul>
  <% if @upcoming_events.any? %>
    <%= @upcoming_events.each do |u| %>
      <li><%= u.title %></li>
    <% end %>
  <% else %>
    <p>No Upcoming Events</p>
  <% end %>
</ul>
<br>

<h4>Previous Events</h4>
<ul>
  <%# if @past_events.any? %>
    <%# @past_events.each do |p| %>
      <li><%# p.title %></li>
    <%# end %>
  <%# else %>
    <p>No Past Events</p>
  <%# end %>
</ul>


